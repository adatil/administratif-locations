        function removePiece(pieceId) {
            const piece = document.querySelector(`[data-piece="${pieceId}"]`);
            if (piece) {
                piece.remove();
            }
        }

        function addElement(pieceId) {
            const container = document.getElementById(`piece${pieceId}_elements`);
            const newElement = document.createElement('div');
            newElement.className = 'element-row';
            
            newElement.innerHTML = `
                <input type="text" placeholder="Nom de l'√©l√©ment" style="width: 100%;">
                <select class="etat-select">
                    <option value="">-</option>
                    <option value="Bon">Bon</option>
                    <option value="Moyen">Moyen</option>
                    <option value="Mauvais">Mauvais</option>
                </select>
                <textarea placeholder="Observations d√©taill√©es..."></textarea>
            `;
            
            container.appendChild(newElement);
        }

        function previewEtat() {
            const formData = collectFormData();
            const preview = document.getElementById('preview');
            
            preview.innerHTML = generateEtatHTML(formData);
            
            document.querySelector('.edit-mode').classList.add('hidden');
            document.querySelector('.preview-mode').classList.add('active');
            document.getElementById('editBtn').style.display = 'inline-block';
        }

        function editEtat() {
            document.querySelector('.edit-mode').classList.remove('hidden');
            document.querySelector('.preview-mode').classList.remove('active');
            document.getElementById('editBtn').style.display = 'none';
        }

        function collectFormData() {
            const data = {
                type_etat: document.getElementById('type_etat').value,
                date_etat: document.getElementById('date_etat').value,
                heure_etat: document.getElementById('heure_etat').value,
                
                logement_adresse: document.getElementById('logement_adresse').value,
                logement_cp: document.getElementById('logement_cp').value,
                logement_ville: document.getElementById('logement_ville').value,
                logement_type: document.getElementById('logement_type').value,
                logement_surface: document.getElementById('logement_surface').value,
                
                bailleur_nom: document.getElementById('bailleur_nom').value,
                locataire_nom: document.getElementById('locataire_nom').value,
                expert_present: document.getElementById('expert_present').checked,
                expert_nom: document.getElementById('expert_nom').value,
                
                compteur_elec: document.getElementById('compteur_elec').value,
                compteur_eau: document.getElementById('compteur_eau').value,
                
                nombre_cles: document.getElementById('nombre_cles').value,
                detail_cles: document.getElementById('detail_cles').value,
                
                observations_generales: document.getElementById('observations_generales').value,
                travaux_prevus: document.getElementById('travaux_prevus').checked,
                detail_travaux: document.getElementById('detail_travaux').value,
                
                pieces: []
            };
            
            // Collecte des donn√©es des pi√®ces
            const pieces = document.querySelectorAll('.piece-block');
            pieces.forEach((piece) => {
                const pieceId = piece.getAttribute('data-piece');
                const nomInput = piece.querySelector(`#piece${pieceId}_nom`) || piece.querySelector('input[type="text"]');
                const pieceData = {
                    nom: nomInput?.value || `Pi√®ce ${pieceId}`,
                    elements: []
                };
                
                const elements = piece.querySelectorAll('.element-row');
                elements.forEach(element => {
                    const label = element.querySelector('label') || element.querySelector('input[type="text"]');
                    const etat = element.querySelector('.etat-select');
                    const observation = element.querySelector('textarea');
                    
                    if (label && etat && observation) {
                        pieceData.elements.push({
                            nom: label.textContent || label.value || '',
                            etat: etat.value,
                            observation: observation.value
                        });
                    }
                });
                
                data.pieces.push(pieceData);
            });
            
            return data;
        }

        function generateEtatHTML(data) {
            const typeText = data.type_etat === 'entree' ? 'D\'ENTR√âE' : 'DE SORTIE';
            
            return `
                <div class="etat-preview">
                    <div class="etat-header">
                        <h1>√âTAT DES LIEUX ${typeText}</h1>
                        <p><strong>Date :</strong> ${formatDate(data.date_etat)} √† ${data.heure_etat}</p>
                    </div>

                    <div class="section">
                        <div class="section-title">LOGEMENT CONCERN√â</div>
                        <p><strong>Adresse :</strong> ${data.logement_adresse}</p>
                        <p><strong>Code postal :</strong> ${data.logement_cp} <strong>Ville :</strong> ${data.logement_ville}</p>
                        <p><strong>Type :</strong> ${data.logement_type} <strong>Surface :</strong> ${data.logement_surface} m¬≤</p>
                    </div>

                    <div class="section">
                        <div class="section-title">PARTICIPANTS</div>
                        <p><strong>Bailleur :</strong> ${data.bailleur_nom}</p>
                        <p><strong>Locataire :</strong> ${data.locataire_nom}</p>
                        ${data.expert_present ? `<p><strong>Expert :</strong> ${data.expert_nom}</p>` : ''}
                    </div>

                    <div class="section">
                        <div class="section-title">√âTAT DES PI√àCES</div>
                        ${data.pieces.map(piece => `
                            <h4>${piece.nom}</h4>
                            <table class="piece-table">
                                <thead>
                                    <tr>
                                        <th style="width: 25%;">√âl√©ment</th>
