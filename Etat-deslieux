    <script>
        let pieceCount = 0;
        let elementCount = 1;

        // Gestion de l'affichage expert
        document.getElementById('expert_present').addEventListener('change', function() {
            document.getElementById('expert_group').style.display = this.checked ? 'block' : 'none';
        });

        // Gestion de l'affichage travaux
        document.getElementById('travaux_prevus').addEventListener('change', function() {
            document.getElementById('travaux_group').style.display = this.checked ? 'block' : 'none';
        });

        // Initialiser la date et l'heure actuelles
        const now = new Date();
        document.getElementById('date_etat').value = now.toISOString().split('T')[0];
        document.getElementById('heure_etat').value = now.toTimeString().slice(0, 5);

        function generateSelectedPieces() {
            const selectedPieces = document.querySelectorAll('.piece-checkbox:checked');
            if (selectedPieces.length === 0) {
                alert('Veuillez s√©lectionner au moins une pi√®ce.');
                return;
            }

            // Effacer toutes les pi√®ces existantes
            clearAllPieces();

            // G√©n√©rer les pi√®ces s√©lectionn√©es
            selectedPieces.forEach((checkbox, index) => {
                const pieceName = checkbox.dataset.piece;
                createPieceWithName(pieceName);
            });

            // D√©cocher toutes les cases
            selectedPieces.forEach(checkbox => checkbox.checked = false);
        }

        function clearAllPieces() {
            const container = document.getElementById('pieces-container');
            container.innerHTML = '';
            pieceCount = 0;
        }

        function createPieceWithName(pieceName) {
            pieceCount++;
            const container = document.getElementById('pieces-container');
            const newPiece = document.createElement('div');
            newPiece.className = 'piece-block';
            newPiece.setAttribute('data-piece', pieceCount);
            
            // √âl√©ments sp√©cifiques selon le type de pi√®ce
            const specificElements = getSpecificElements(pieceName);
            
            newPiece.innerHTML = `
                <h4>
                    <span>${pieceName}</span>
                    <div>
                        <input type="text" id="piece${pieceCount}_nom" value="${pieceName}" style="width: 200px; margin-right: 10px;">
                        <button type="button" class="mini-btn btn-warning" onclick="removePiece(${pieceCount})">üóëÔ∏è</button>
                    </div>
                </h4>
                <div id="piece${pieceCount}_elements">
                    ${specificElements}
                </div>
                <button type="button" class="btn btn-info" onclick="addElement(${pieceCount})" style="margin-top: 10px;">‚ûï Ajouter un √©l√©ment</button>
            `;
            
            container.appendChild(newPiece);
            newPiece.style.display = 'block';
        }

